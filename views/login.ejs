  <body>
    <div class="flex">
      <button type="button" class="btn btn-primary">Log in</button>
      <button type="button" class="btn btn-secondary">Sign up</button>

<form method="post" action="/guest" class='guest' onsubmit="return window.confirm('area you sure you want to continue as a guest!')">
  <button type="submit" class="btn btn-secondary">Continue as a guest</button>

</form>


    </div>

	  <% if( fail_code == 'you are alredy logged in'){%>
		  <a href="/home" id='home'> <%= fail_code %> </a>



	  <%} else {%>
		   <p> <%= fail_code %> </p>

		  	<form action="/signup" method="post" class="signup hide" id="signup">
      <h1>create a new account</h1>


	 <p> <%= code %> </p>
      <label for="username" class="form-label">Username:</label>
